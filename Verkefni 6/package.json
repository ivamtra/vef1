{
  "name": "sass-brower-sync",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "browser-sync": "browser-sync start --server --files index.html styles/styles.css",
    "sass": "sass styles/styles.scss styles/styles.css",
    "sass-watch": "sass --watch styles/*.scss styles/styles.css",
    "dev": "concurrently npm:sass-watch npm:browser-sync",
    "lint-scss": "stylelint styles/styles.scss styles/*.scss",
    "lint-css": "stylelint styles/styles.css styles/*.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "concurrently": "^6.2.1",
    "sass": "^1.42.1",
    "stylelint": "^14.13.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^28.0.0"
  },
  "dependencies": {
    "lint": "^0.7.0",
    "stylelint-scss": "^4.3.0"
  }
}
